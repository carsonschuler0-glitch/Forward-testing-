{
  "name": "polymarket-trading-tracker",
  "version": "1.0.0",
  "description": "Bot to track high-profit traders making large trades on Polymarket",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && mkdir -p dist/database && cp src/database/schema.sql dist/database/",
    "start": "node dist/webServer.js",
    "dev": "ts-node src/index.ts",
    "watch": "tsc -w",
    "backtest": "ts-node src/backtest.ts",
    "forward-test": "ts-node src/forwardTest.ts",
    "forward-test:demo": "ts-node src/forwardTestDemo.ts",
    "web": "ts-node src/webServer.ts",
    "arbitrage": "ts-node src/arbitrageRunner.ts",
    "arbitrage:sim": "ARB_EXECUTION_MODE=simulation ts-node src/arbitrageRunner.ts",
    "arbitrage:live": "ARB_EXECUTION_MODE=live ts-node src/arbitrageRunner.ts",
    "arb:start": "npx pm2 start ecosystem.config.js",
    "arb:stop": "npx pm2 stop polymarket-arbitrage",
    "arb:restart": "npx pm2 restart polymarket-arbitrage",
    "arb:logs": "npx pm2 logs polymarket-arbitrage",
    "arb:status": "npx pm2 status",
    "arb:monitor": "npx pm2 monit",
    "postinstall": "npm run build"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "polymarket",
    "trading",
    "bot",
    "monitoring"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@polymarket/clob-client": "^5.1.3",
    "@types/pg": "^8.16.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "express": "^4.18.2",
    "node-telegram-bot-api": "^0.64.0",
    "pg": "^8.16.3",
    "socket.io": "^4.7.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/node-telegram-bot-api": "^0.64.0",
    "pm2": "^6.0.14",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
